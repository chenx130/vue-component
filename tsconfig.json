{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        // tsx
        "jsx": "preserve",
        // json
        "resolveJsonModule": true,
        "types": ["node"],
    }
}